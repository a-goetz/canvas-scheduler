{% extends 'base.htm.j2' %}
{% block content %}

<form class="form-group" action="{{ url_for('process_complete', _external=True) }}" method="POST">
{% for date in date_list %}
<p>{{ date }}</p>
<select class="form-control" id="{{ date }}" name="{{ date }}">
{% for item in item_list %}
{% if assignment_type == 'assignments' %}
	<option value="{{ item.id }}">{{ item.name }}</option>
	{% else %}
	<option value="{{ item.id }}">{{ item.title }}</option>
	{% endif %}
{% endfor %}
</select>
{% endfor %}

<p><input class="btn btn-primary" type="submit" value="Finalize" /></p>
</form>

{% endblock content %}