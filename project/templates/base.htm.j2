<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset='utf-8'/>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/main.css') }}">
    <script type="text/javascript" src="{{ url_for('static', filename='js/main.js') }}"></script>

    <!-- ReactJS -->
    <script src="{{ url_for('static', filename='bower_components/react/react.min.js') }}"></script>
    <script src="{{ url_for('static', filename='bower_components/react/react-dom.min.js') }}"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/react/0.13.3/JSXTransformer.js"></script>

    <title>LTI Template</title>
</head>

<body>

    <h1 id="content"></h1>

    <script type="text/jsx">

        /*** @jsx React.DOM */

        var realPython = React.createClass({
            render: function() {
                return (<h2>Greetings, from Real Python!</h2>);
            }
        });

        ReactDOM.render(
            React.createElement(realPython, null),
            document.getElementById('content')
        );

    </script>

    {% block content %} {% endblock %}

    <footer>
        <p>Built using the <a href="https://github.com/ucfopen/lti-template-flask">UCF LTI Template for Python and Flask</a> 2016 &ndash; <script>document.write(new Date().getFullYear());</script></p>
    </footer>
</body>
</html>
